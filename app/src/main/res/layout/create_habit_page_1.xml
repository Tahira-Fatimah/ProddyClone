<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:paddingHorizontal="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="80dp"
    android:background="@drawable/habit_card"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put in a name for your habit"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="@color/create_habit_prompt"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/habitNameEditText"
        android:paddingHorizontal="10dp"
        android:hint="Your Habit..."
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background_2"
        android:backgroundTint="@color/create_habit_text_bg"
        android:textColorHint="@color/create_habit_your_habit"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/40"
            android:id="@+id/charCount"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/create_habit_prompt"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start off by making your habit very easy to achieve. By doing this yout won't get burned out and give up."
        android:textSize="16sp"
        android:textFontWeight="900"
        android:textColor="@color/create_habit_your_habit"
        />

</LinearLayout>


