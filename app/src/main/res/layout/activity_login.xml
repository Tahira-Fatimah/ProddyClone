<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#ECE1FA"
        android:paddingHorizontal="25dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's get you logged in!"
            android:textColor="#3D155F"
            android:textSize="33sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:gravity="center"/>

        <!-- Image (Illustration) -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/rocket_flatline"
            android:layout_marginVertical="16dp"
            android:contentDescription="Login Illustration"/>

        <!-- Continue with Apple Button -->

        <LinearLayout
            android:id="@+id/btnGoogleSignIn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/signin_with_google_bg"
            android:focusable="true"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/google_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="Sign In with Google"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </LinearLayout>


        <!-- OR Separator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="@color/login_continue_with_google_font"
            android:layout_marginVertical="12dp"/>

        <!-- Email EditText -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/signin_edit_text_bg"
            android:drawableStart="@drawable/email"
            android:drawablePadding="8dp"
            android:padding="18dp"
            android:textColor="#3D155F"
            android:layout_marginBottom="18dp"/>

        <!-- Password EditText -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/signin_edit_text_bg"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="8dp"
            android:padding="18dp"
            android:textColor="#3D155F"
            android:inputType="textPassword"
            android:layout_marginBottom="22dp"/>

        <!-- Forgot Password Text -->
        <TextView
            android:id="@+id/signupOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign up now"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>


        <TextView
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="Login"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/reflection_bg"
            android:padding="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:clickable="true"/>


        <TextView
            android:id="@+id/checkonly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/reflection_bg"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/terms_text" />


    </LinearLayout>

</ScrollView>



