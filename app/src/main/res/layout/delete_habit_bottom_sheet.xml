<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/control_tab_bg">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="30dp"
            android:paddingHorizontal="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Are you sure?"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/edit_habit_delete_message"/>
            <TextView
                android:id="@+id/deleteHabitBtn"
                android:layout_width="300dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background_3"
                android:backgroundTint="@color/edit_habit_delete_habit"
                android:gravity="center"
                android:text="Delete"
                android:textSize="27sp"
                android:textColor="@color/white"/>

        </LinearLayout>


    </FrameLayout>


</LinearLayout>