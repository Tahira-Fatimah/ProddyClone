<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settings_bg_grey">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="-65dp"
        android:layout_marginStart="-20dp"
        android:background="@drawable/circular_background"
        android:alpha="0.1">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Icon and Heading -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/return_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />
        </LinearLayout>

        <!-- Account Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/account"
                android:backgroundTint="#220545"
                android:gravity="center_vertical"
                android:layout_marginEnd="15dp">
            </ImageView>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR EMAIL"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@gmail.com"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="5dp"/>


        <!-- General Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/general"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Switches -->
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            app:trackTint="@color/track_tint_selector"
            app:thumbTint="@color/white"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Accountability Check-In"
            app:trackTint="@color/track_tint_selector"
            app:thumbTint="@color/white" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show upcoming habits"
            app:trackTint="@color/track_tint_selector"
            app:thumbTint="@color/white"
            android:checked="true"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display daily mood check-in"
            app:trackTint="@color/track_tint_selector"
            app:thumbTint="@color/white"
            android:checked="true"
            android:layout_marginBottom="16dp" />

        <!-- Other Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            >

            <LinearLayout
                android:id="@+id/change_habit_order"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_background_1"
                android:layout_marginBottom="16dp"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_background_1"
                    android:backgroundTint="@color/settings_icons_bg_purple"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/change_habit_order">

                    </ImageView>
                </FrameLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change habit order"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_background_1"
                android:backgroundTint="@color/bg_dark_purple"
                android:layout_marginBottom="16dp"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_background_1"
                    android:backgroundTint="@color/settings_star_bg"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/star"
                        android:backgroundTint="@color/font_light_yellow">

                    </ImageView>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate the app 5 stars :)"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_background_1"
                android:layout_marginBottom="16dp"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                >

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_background_1"
                    android:backgroundTint="@color/settings_icons_bg_purple"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mail"
                        android:backgroundTint="@color/black">

                    </ImageView>
                </FrameLayout>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Contact the developer at thomas@proddy.app"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_background_1"
                android:layout_marginBottom="16dp"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_background_1"
                    android:backgroundTint="@color/settings_icons_bg_purple"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/share"
                        android:backgroundTint="@color/black">

                    </ImageView>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share with a friend"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_background_1"
                android:layout_marginBottom="16dp"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_background_1"
                    android:backgroundTint="@color/settings_icons_bg_purple"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/logout"
                        android:backgroundTint="@color/black">

                    </ImageView>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_background_1"
                android:backgroundTint="@color/settings_delete_acc_btn_red"
                android:layout_marginBottom="16dp"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_background_1"
                    android:backgroundTint="@color/settings_delete_bg"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/delete"
                        android:backgroundTint="@color/white">

                    </ImageView>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    >

                </TextView>

            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
    </FrameLayout>
</ScrollView>
