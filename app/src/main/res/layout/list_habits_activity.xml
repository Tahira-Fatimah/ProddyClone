<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:background="#F5F5F5"
    tools:context=".Activities.ChangeHabitsOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cancel_habit"
            android:src="@drawable/close"
            app:tint="@color/reflection_date_font_purple"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Habits"
                android:fontFamily="@font/ibx_medium"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/reflection_date_font_purple"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to edit a habit"
                android:fontFamily="@font/ibx_medium"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/medium_purple"/>

        </LinearLayout>



    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_habits"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>