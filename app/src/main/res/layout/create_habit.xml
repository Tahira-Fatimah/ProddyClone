<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/habit_create_bg"
    android:backgroundTint="#140845">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pattern"
        android:backgroundTint="@color/bg_dark_purple"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uE9bf"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:textColor="@color/light_purple"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_columnWeight="15"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_background_general_habits"
                android:backgroundTint="@color/habit_light_purple"
                android:text="\uE9CC"
                android:textSize="18sp"
                android:textColor="@color/accent_material_light" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_columnWeight="15"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_background_general_habits"
                android:backgroundTint="@color/habit_light_purple"
                android:text="\uE9CC"
                android:textSize="18sp"
                android:textColor="@color/light_purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_columnWeight="15"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_background_general_habits"
                android:backgroundTint="@color/habit_light_purple"
                android:text="\uE9CC"
                android:textSize="18sp"
                android:textColor="@color/light_purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_columnWeight="15"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_background_general_habits"
                android:backgroundTint="@color/habit_light_purple"
                android:text="\uE9CC"
                android:textSize="18sp"
                android:textColor="@color/light_purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_columnWeight="15"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_background_general_habits"
                android:backgroundTint="@color/habit_light_purple"
                android:text="\uE9CC"
                android:textSize="18sp"
                android:textColor="@color/light_purple" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/habit_card"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Put in a name for your habit"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textColor="@color/light_purple"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="80dp"
                android:paddingHorizontal="10dp"
                android:hint="Your Habit..."
                android:background="@drawable/rounded_background_2"
                android:backgroundTint="@color/habit_light_purple"
                android:textColorHint="@color/light_purple"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/40"
                android:textSize="16sp"
                android:textColor="@color/light_purple"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start off by making your habit very easy to achieve. By doing this yout won't get burned out and give up."
                android:textSize="16sp"
                android:padding="20dp"
                android:textColor="@color/light_purple"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>