<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:id="@+id/lessonCard"
    app:cardElevation="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lessonImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:src="@drawable/lesson2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lessonInfoContainer"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lessonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Tiny Habits"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/lessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why easy is better than difficult"
                android:textSize="14sp"
                android:paddingHorizontal="8dp"
                android:textColor="#808080" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
