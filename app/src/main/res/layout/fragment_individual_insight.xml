<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Plants"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/bg_dark_purple"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/completed_habits_scale_1"
            android:paddingVertical="16dp"
            android:paddingStart="26dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/completed_habit_font" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="day streak"
                    android:textColor="@color/completed_habit_font"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/streak_rocket"/>

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/bg_dark_purple"
            android:paddingVertical="16dp"
            android:paddingHorizontal="26dp"
            android:layout_marginBottom="16dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

                <GridView
                    android:id="@+id/calendarIndividual"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginVertical="30dp"
                    android:horizontalSpacing="3dp"
                    android:verticalSpacing="5dp"
                    android:paddingHorizontal="40dp"
                    android:numColumns="7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <View
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/rounded_background_2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Completed"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <View
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/rounded_background_2"
                            android:backgroundTint="@color/today_item_calendar"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Today"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <View
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/rounded_background_2"
                            android:backgroundTint="@color/grid_item_calendar"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Not completed"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <View
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/rounded_background_2"
                            android:backgroundTint="@color/checkmark_purple"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Not tracked"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/habit_track"
            android:paddingVertical="16dp"
            android:padding="15dp"
            android:layout_marginBottom="16dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You track this habit on:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/completed_habit_font"
                />


            <GridView
                android:id="@+id/habitTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="20dp"
                android:numColumns="3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/completed_habits_scale_1"
            android:paddingVertical="16dp"
            android:paddingStart="26dp"
            android:layout_marginBottom="16dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME SPENT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/completed_habit_font"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="You've spent 0 minutes on this habit"
                    android:lineHeight="24dp"
                    android:textColor="@color/completed_habit_font"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/time"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_1"
            android:backgroundTint="@color/bg_dark_purple"
            android:paddingVertical="16dp"
            android:paddingStart="26dp"
            android:layout_marginBottom="16dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LONGEST STREAK"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/font_light_yellow"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Your longest streak overall is 0 days"
                    android:lineHeight="24dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/longest_streak"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>


