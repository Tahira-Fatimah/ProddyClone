<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/habit_create_bg"
    android:backgroundTint="@color/reflection_bg"
    android:paddingTop="40dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a note about whatever you think and feel"
        android:textColor="@color/reflection_feeling_title"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:textSize="26sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/reflectionThoughts"
        android:padding="10dp"
        android:hint="Your note..."
        android:textColorHint="@color/reflection_add_note"
        android:textColor="@color/reflection_add_note"
        android:textSize="18sp"
        android:gravity="start"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"/>

</LinearLayout>