                            android:layout_height="wrap_content"
                            android:text="COMPLETED HABITS"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/completed_habit_font"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WEEK"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/habits_general_week_font_color" />
                    </RelativeLayout>

                    <!-- Habits Progress -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="13"
                        android:layout_marginTop="8dp"
                        >

                        <!-- 7 Squares for habit tracking -->
                        <TextView
                            android:id="@+id/gen_ht_1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_columnWeight="15"
                            android:background="@drawable/rounded_background_general_habits_start"
                            android:backgroundTint="@color/insights_original_color"
                            android:gravity="center"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/habits_general_font_color"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="50dp"
                            android:background="@color/completed_habits_bg_purple" />

                        <TextView
                            android:id="@+id/gen_ht_2"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_columnWeight="15"
                            android:background="@drawable/rounded_background_general_habits"
                            android:backgroundTint="@color/insights_original_color"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/habits_general_font_color"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="50dp"
                            android:background="@color/completed_habits_bg_purple" />


                        <TextView
                            android:id="@+id/gen_ht_3"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_columnWeight="15"
                            android:background="@drawable/rounded_background_general_habits"
                            android:backgroundTint="@color/insights_original_color"
                            android:gravity="center"
                            android:text="2"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/habits_general_font_color" />

                        <View
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="50dp"
                            android:background="@color/completed_habits_bg_purple" />


                        <TextView
                            android:id="@+id/gen_ht_4"
                            android:layout_width="0dp"
                            android:layout_columnWeight="15"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_background_general_habits"
                            android:backgroundTint="@color/insights_original_color"
                            android:gravity="center"
                            android:text="3"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/habits_general_font_color" />

                        <View
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="50dp"
                            android:background="@color/completed_habits_bg_purple" />


                        <TextView
                            android:id="@+id/gen_ht_5"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_columnWeight="15"
                            android:background="@drawable/rounded_background_general_habits"
                            android:backgroundTint="@color/insights_original_color"
                            android:gravity="center"
                            android:text="4"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/habits_general_font_color" />

                        <View
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="50dp"
                            android:background="@color/completed_habits_bg_purple" />


                        <TextView
                            android:id="@+id/gen_ht_6"
                            android:layout_width="0dp"
                            android:layout_columnWeight="15"
                            android:layout_height="50dp"
