<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/icon_gift"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_background_2"
            android:src="@drawable/applogo"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_background_2"
            android:clipToOutline="true"
            android:src="@drawable/applogo" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODAY"
        android:fontFamily="@font/ibx_medium"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/illustration"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@drawable/rounded_background_1"
        android:src="@drawable/applogo"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completion_status"
        android:text="1 COMPLETED TODAY"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/ibx_medium"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <ListView
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/habit_list_view"/>

</LinearLayout>
